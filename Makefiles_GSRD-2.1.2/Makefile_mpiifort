######################################################################################
#compiler
FCC = mpiifort
FFLAGS =  -O3 -mkl=sequential

######################################################################################
## directories defs
##current directory
BASE = $(CURDIR)

## target file
TARGET = gsrd.x

EXEC = $(BASE)/$(TARGET)
OBJD = $(BASE)/obj
SRCD = $(BASE)/src
LIBS_AENET=$(HOME)/lib
MYLIBS=$(BASE)/extlib

VPATH = $(OBJD):$(SRCD):$(SRCD)/inicondlib:$(MYLIBS):$(MYLIBS)/linalg

LIB = -L$(LIBS_AENET) -laenet_intel -llbfgsb_intel

######################################################################################
# Main and functions
SRC_MAIN = $(SRCD)/gsrd.f90
SRC = $(SRC_MAIN)

#modules
SRCMOD = $(addprefix $(SRCD)/, commonvars.f90 )

#routines
SRC += $(addprefix $(SRCD)/, readwrite.f90 pes_aenet.f90 potfuncgrad.f90 energy$
#initial cond sampling
SRC += $(addprefix $(SRCD)/inicondlib/, nmodean.f90 nmodesamp.f90 epotvalue.f90$
################# to compile version with pure normal mode
#SRC += $(addprefix $(SRCD)/inicondlib/, nmodean_mu.f90 nmodesamp.f90 epotvalue$

########
#common routines
SRC += $(addprefix $(MYLIBS)/, checkfile.f90 rand_normal.f90 )
# linear algebra routines
SRC += $(addprefix $(MYLIBS)/linealalg/,coordchange.f90 crossprod.f90  printmat$
#
SRCF77 = $(addprefix $(MYLIBS)/, ran0.f gasdev.f ran1.f)

######################################################################################
##objects to build
f90OBJS=$(notdir $(SRC:.f90=.o))

f77OBJS=$(notdir $(SRCF77:.f=.o))

MODOBJS=$(notdir $(SRCMOD:.f90=.mod))

######################################################################################
all:    $(MODOBJS)	$(f90OBJS)	$(f77OBJS)
        @echo building executable
        cd $(OBJD); $(FCC) $(MODOBJS) $(f90OBJS) $(f77OBJS) $(FFLAGS) -o $(EXEC$

$(MODOBJS):     %.mod : %.f90
        @echo building modules
        cd $(OBJD); $(FCC) $(LIB) -c $(FFLAGS) $< -o $@

$(f90OBJS):     %.o : %.f90
        @echo building $*.o
        cd $(OBJD); $(FCC) -I$(SRC_AENET) -c $(FFLAGS) $< -o $@

$(f77OBJS):     %.o : %.f
        @echo building $*.o
        cd $(OBJD); $(FCC) -c $(FFLAGS) $< -o $@

test:
     	@echo "test"
        @echo $(SRC)
        @echo "test"
        @echo $(MODOBJS)
        @echo "test"
        @echo "hola $< -o $@"

sync:
     	  rsync -avz --delete --progress -u $(BASE)/Makefile  piluso:~/GSRD_codes$
        rsync -avz --delete --progress -u --exclude=".*"  $(BASE)/src/  piluso:$
        rsync -avz --delete --progress -u --exclude=".*"  $(BASE)/doc/  piluso:$

clean:
      	rm -f $(OBJD)/*.o $(OBJD)/*.mod gsrd.x

